@prefix : <http://www.knora.org/ontology/image#>.

<http://www.nie-ine.ch/ontology/image>
	a owl:Ontology.
#	dct:title "An ontology about image"@en;
#	dct:description """Formal description of image as a visual resource in the broadest sense, general subclasses, related classes, and properties."""@en;
#	dct:creator "Hans Cools, software developer, NIE, Basel University, Switzerland"@en;

#
# CLASSES
#

:Image
	a owl:Class;
	rdfs:label "image"@en,"Bild"@de;
	rdfs:comment """2-dimensional representation of a resource made with light processing."""@en;
	rdfs:subClassOf cidoc:E38_Image, knora-base:Resource, [ # subClassOf cidoc:E36_Visual_Item subClassOf cidoc:E73_Information_Object
		a owl:Restriction; owl:onProperty text:hasNameObject; owl:minCardinality "1"^^xsd:nonNegativeInteger].

# knora-base:StillImageRepresentation declared as a container for image file values in Knora Base Ontology

#
# PROPERTIES
#

:hasImage
	a owl:ObjectProperty;
	rdfs:label "has image";
	rdfs:comment """Relating a resource to an image thereof."""@en;
	rdfs:subPropertyOf knora-base:hasLinkTo;
	rdfs:subjectClassConstraint knora-base:Resource;
	rdfs:objectClassConstraint :Image.

:hasImageValue
	a owl:ObjectProperty;
	rdfs:label "has image value";
	rdfs:comment """Relating a resource to a reification statement of the relation between the resource and an image thereof."""@en;
	rdfs:subPropertyOf knora-base:hasLinkToValue;
	rdfs:subjectClassConstraint knora-base:Resource;
	rdfs:objectClassConstraint knora-base:LinkValue.

:hasStillImageRepresentation
	a owl:ObjectProperty;
	rdfs:label "has still image representation"@en, "hat Bild-Repr√§sentation"@de;
	rdfs:comment """Relating a resource to an abstract 2-dimensional image representation thereof."""@en;
	rdfs:subPropertyOf kb:hasRepresentation;
	kb:subjectClassConstraint knora-base:Resource;
	kb:objectClassConstraint knora-base:StillImageRepresentation.

:hasStillImageRepresentationValue
	a owl:ObjectProperty;
	rdfs:label "has still image representation value"@en;
	rdfs:comment """Relating a resource to a reification statement of the relation between the resource and an abstract 2-dimensional image representation thereof."""@en;
	rdfs:subPropertyOf knora-base:hasRepresentationValue;
	kb:subjectClassConstraint knora-base:Resource;
	kb:objectClassConstraint knora-base:LinkValue.